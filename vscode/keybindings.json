[
    /* Cursor Up */
    {
        "key": "ctrl+p",
        "command": "cursorUp",
        "when": "textInputFocus"
    },
    /* Cursor Down */
    {
        "key": "ctrl+n",
        "command": "cursorDown",
        "when": "textInputFocus"
    },
    /* Cursor Left */
    {
        "key": "ctrl+b",
        "command": "cursorLeft",
        "when": "textInputFocus"
    },
    /* Cursor Right */
    {
        "key": "ctrl+f",
        "command": "cursorRight",
        "when": "textInputFocus"
    },
    /* Cursor Home */
    {
        "key": "ctrl+a",
        "command": "cursorHome",
        "when": "textInputFocus"
    },
    /* Cursor End */
    {
        "key": "ctrl+e",
        "command": "cursorEnd",
        "when": "textInputFocus"
    },
    /* Cursor Word Left */
    {
        "key": "alt+b",
        "command": "cursorWordLeft",
        "when": "textInputFocus"
    },
    /* Cursor Word End Right */
    {
        "key": "alt+f",
        "command": "cursorWordEndRight",
        "when": "textInputFocus"
    },
    /* Cursor Top */
    {
        "key": "shift+alt+oem_comma",
        "command": "cursorTop",
        "when": "textInputFocus"
    },
    /* Cursor Bottom */
    {
        "key": "shift+alt+oem_period",
        "command": "cursorBottom",
        "when": "textInputFocus"
    },
    /* Quick Open */
    {
        "key": "ctrl+m",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpen"
    }
    /* Select Suggestion */
    {
        "key": "ctrl+n",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+p",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    /* Navigate In Quick Open */
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    /* Scroll Page */
    {
        "key": "alt+p",
        "command": "cursorPageUp",
        "when": "textInputFocus"
    },
    {
        "key": "alt+n",
        "command": "cursorPageDown",
        "when": "textInputFocus"
    },
    /* Focus Side Bar */
    {
        "key": "ctrl+oem_comma",
        "command": "workbench.action.focusSideBar"
    },
    {
        "key": "ctrl+oem_comma",
        "command": "-workbench.action.openSettings"
    },
    /* Focus First Editor Group */
    {
        "key": "ctrl+oem_1",
        "command": "workbench.action.focusFirstEditorGroup"
    },
    /* Remove C-w Close Editor */
    {
        "key": "ctrl+w",
        "command": "-workbench.action.closeActiveEditor"
    }
]